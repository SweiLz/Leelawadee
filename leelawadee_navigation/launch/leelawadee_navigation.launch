<launch>
    <arg name="map_file" default="$(find leelawadee_navigation)/maps/map_fibo_f2.yaml"/>
    <arg name="open_rviz" default="false"/>
    
    
    <!-- Map server -->
    <node name="map_server" pkg="map_server" type="map_server" args="$(arg map_file)"/>

    <!-- Localization -->
    <include file="$(find leelawadee_navigation)/launch/leelawadee_amcl.launch"/>
    
    <!-- Move base -->
    <!-- <include file="$(find leelawadee_navigation)/launch/leelawadee_movebase.launch"/> -->

    <!-- rviz -->
    <group if="$(arg open_rviz)">
        <node name="rviz" pkg="rviz" type="rviz" required="true"
              args="-d $(find leelawadee_navigation)/cfg/leelawadee_nav.rviz"/>
    </group>
    

</launch>